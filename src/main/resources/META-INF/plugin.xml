<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>cz.petrflajsingr.clion_plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>pf_clion_plugin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="flajsingr@gmail.com" url="https://github.com/PetrFlajsingr/pf_imgui">PetrFlajsingr</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>Generator for pf asserts and their IDs..................................</description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <group id="cz.petrflajsingr.clion_plugin.AssertActionGroup"
               class="cz.petrflajsingr.clion_plugin.AssertActionGroup"
               text="Assert generation" description="Actions for generating asserts and their IDs">

            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="cz.petrflajsingr.clion_plugin.InsertHexIdAction"
                    class="cz.petrflajsingr.clion_plugin.InsertHexIdAction" text="Insert ID"
                    description="Insert hex int ID used for pf asserts">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD0"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.InsertEnsureAction"
                    class="cz.petrflajsingr.clion_plugin.InsertEnsureAction"
                    text="Insert ensure" description="Insert ensure with generated random ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD1"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.InsertAssertAction"
                    class="cz.petrflajsingr.clion_plugin.InsertAssertAction"
                    text="Insert assert" description="Insert an assert with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD2"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.InsertVerifyAction"
                    class="cz.petrflajsingr.clion_plugin.InsertVerifyAction"
                    text="Insert verify" description="Insert verify action with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD3"/>
            </action>
            <separator/>
            <action id="cz.petrflajsingr.clion_plugin.InsertDbgWarnAction"
                    class="cz.petrflajsingr.clion_plugin.InsertDbgWarnAction"
                    text="Insert debug warn" description="Insert debug warning with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD4"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.InsertDbgErrorAction"
                    class="cz.petrflajsingr.clion_plugin.InsertDbgErrorAction"
                    text="Insert debug error" description="Insert debug error with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD5"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.InsertWarnAction"
                    class="cz.petrflajsingr.clion_plugin.InsertWarnAction" text="Insert warning"
                    description="Insert warning with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD6"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.InsertErrorAction"
                    class="cz.petrflajsingr.clion_plugin.InsertErrorAction" text="Insert error"
                    description="Insert error with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD7"/>
            </action>
            <separator/>
            <action id="cz.petrflajsingr.clion_plugin.InsertStaticAssertAction"
                    class="cz.petrflajsingr.clion_plugin.InsertStaticAssertAction"
                    text="Insert static assert" description="Insert static assert with a unique ID">
                <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD8"/>
            </action>
            <action id="cz.petrflajsingr.clion_plugin.WrapUnoptimizePragmaAction"
                    class="cz.petrflajsingr.clion_plugin.WrapUnoptimizePragmaAction"
                    text="Disable optimization for selection"
                    description="Wrap currently selected text in pragma optimize"/>

        </group>
    </actions>
</idea-plugin>